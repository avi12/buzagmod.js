{
  "name": "buzagmod.js",
  "engines": {
    "node": ">=v16.13",
    "npm": ">=8.1"
  },
  "main": "packages/main/dist/index.cjs",
  "scripts": {
    "build": "npm run build:main && npm run build:preload && npm run build:renderer",
    "build:main": "cd ./packages/main && vite build",
    "build:preload": "cd ./packages/preload && vite build",
    "build:renderer": "cd ./packages/renderer && vite build",
    "release": "cross-env MODE=production pnpm build && electron-builder build --config .electron-builder.config.js --dir --config.asar=false",
    "test": "pnpm test:main && pnpm test:preload && pnpm test:renderer && pnpm test:e2e",
    "test:e2e": "pnpm build && vitest run",
    "test:main": "vitest run -r packages/main --passWithNoTests",
    "test:preload": "vitest run -r packages/preload --passWithNoTests",
    "test:renderer": "vitest run -r packages/renderer --passWithNoTests",
    "dev": "node scripts/watch.js",
    "lint": "eslint . --ext js,ts,svelte",
    "typecheck:main": "tsc --noEmit -p packages/main/tsconfig.json",
    "typecheck:preload": "tsc --noEmit -p packages/preload/tsconfig.json",
    "typecheck:renderer": "svelte-check --tsconfig packages/renderer/tsconfig.json",
    "typecheck": "pnpm typecheck:main && pnpm typecheck:preload && pnpm typecheck:renderer"
  },
  "devDependencies": {
    "@mdi/js": "^6.9.96",
    "@sveltejs/vite-plugin-svelte": "1.0.0-next.49",
    "@tsconfig/svelte": "^3.0.0",
    "@types/fs-extra": "^9.0.13",
    "@types/md5": "^2.3.2",
    "@types/node": "^18.0.1",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "5.30.3",
    "@typescript-eslint/parser": "^5.30.3",
    "cross-env": "7.0.3",
    "electron": "19.0.7",
    "electron-builder": "23.1.0",
    "electron-devtools-installer": "3.2.0",
    "eslint": "8.19.0",
    "eslint-plugin-svelte3": "^4.0.0",
    "happy-dom": "6.0.0",
    "nano-staged": "0.8.0",
    "node-sass": "^7.0.1",
    "playwright": "1.23.1",
    "prettier": "^2.7.1",
    "prettier-plugin-svelte": "^2.7.0",
    "sass": "^1.53.0",
    "simple-git-hooks": "2.8.0",
    "svelte": "^3.48.0",
    "svelte-check": "^2.8.0",
    "svelte-materialify": "^0.3.11",
    "svelte-preprocess": "^4.10.7",
    "tslib": "^2.4.0",
    "typescript": "4.7.4",
    "vite": "2.9.13",
    "vitest": "0.16.0"
  },
  "dependencies": {
    "@maruware/blob-to-base64": "^0.0.8",
    "electron-updater": "5.0.5",
    "fflate": "^0.7.3",
    "fs-extra": "^10.1.0",
    "md5": "^2.3.0",
    "uuid": "^8.3.2"
  }
}
